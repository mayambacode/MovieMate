<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Movie Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground" />
        <EditText
            android:id="@+id/et_edit_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit movie title"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Genre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground" />
        <EditText
            android:id="@+id/et_edit_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit genre"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Release Year -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Year"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground" />
        <EditText
            android:id="@+id/et_edit_release_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit release year"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground" />
        <EditText
            android:id="@+id/et_edit_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit rating (1-10)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>
</ScrollView>
