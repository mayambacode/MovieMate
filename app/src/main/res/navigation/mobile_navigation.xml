<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="project.stn991578659.moviemate.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="project.stn991578659.moviemate.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="project.stn991578659.moviemate.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/addMovieFragment"
        android:name="project.stn991578659.moviemate.AddMovieFragment"
        android:label="Add Movie"
        tools:layout="@layout/fragment_add_movie" >

    </fragment>

    <fragment
        android:id="@+id/editMovieFragment"
        android:name="project.stn991578659.moviemate.EditMovieFragment"
        android:label="Edit Movie"
        tools:layout="@layout/fragment_edit_movie" >
    </fragment>
    <argument
        android:name="id"
        app:argType="integer"
         />

</navigation>